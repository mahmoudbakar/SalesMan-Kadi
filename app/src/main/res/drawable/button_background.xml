<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#379cd4" />
            <gradient android:angle="-90" android:startColor="#379cd4" android:endColor="#379cd4"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#093b5c" />
            <solid android:color="#093b5c"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#093b5c" />
            <gradient android:angle="-90" android:startColor="#093b5c" android:endColor="#093b5c" />
        </shape>
    </item>
</selector>